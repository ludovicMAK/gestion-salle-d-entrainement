{
  "info": {
    "name": "Equipments API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Créer un équipement",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Haltères\",\n  \"description\": \"Haltères de 10kg\",\n  \"muscleGroups\": [\"bras\", \"épaules\"]\n}"
        },
        "url": { "raw": "http://localhost:3000/admin/equipments", "protocol": "http", "host": ["localhost"], "port": "3000", "path": ["admin", "equipments"] }
      }
    },
    {
      "name": "Mettre à jour un équipement",
      "request": {
        "method": "PUT",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Haltères modifiés\"\n}"
        },
        "url": { "raw": "http://localhost:3000/admin/equipments/:id", "protocol": "http", "host": ["localhost"], "port": "3000", "path": ["admin", "equipments", ":id"] }
      }
    },
    {
      "name": "Supprimer un équipement",
      "request": {
        "method": "DELETE",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "url": { "raw": "http://localhost:3000/admin/equipments/:id", "protocol": "http", "host": ["localhost"], "port": "3000", "path": ["admin", "equipments", ":id"] }
      }
    },
    {
      "name": "Lister les équipements",
      "request": {
        "method": "GET",
        "url": { "raw": "http://localhost:3000/equipments", "protocol": "http", "host": ["localhost"], "port": "3000", "path": ["equipments"] }
      }
    },
    {
      "name": "Voir un équipement en détail",
      "request": {
        "method": "GET",
        "url": { "raw": "http://localhost:3000/equipments/:id", "protocol": "http", "host": ["localhost"], "port": "3000", "path": ["equipments", ":id"] }
      }
    }
  ]
}